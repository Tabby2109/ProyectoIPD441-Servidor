<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/resultImageView"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:scaleType="fitCenter"
            android:contentDescription="Portada del libro"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/resultTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Título"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/resultAutor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Autor"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/resultGenero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Género"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/resultDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripción"
            android:textSize="14sp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/resultModo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Modo"
            android:textStyle="italic"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/resultSimilitud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Similitud"
            android:textSize="14sp" />
    </LinearLayout>
</ScrollView>
